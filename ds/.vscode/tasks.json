
    {
        "tasks": [
            {
                "type": "shell",
                "label": "gd FileName.out build active file",
                "command": "/usr/bin/gcc",
                "args": [
                    "${file}",
                    "-g",
                    "-ansi",
                    "-pedantic-errors",
                    "-Wall",
                    "-Wextra",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}.out",
                    "dhcp.c",
                    "-Iinclude"                    
                ],
                "problemMatcher": [
                    "$gcc"
                ],
                "group": "build"
            }
        ],
        
        "version": "2.0.0"
    }