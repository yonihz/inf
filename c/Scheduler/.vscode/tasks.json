
    {
        "tasks": [
            {
                "type": "shell",
                "label": "gd FileName.out build active file",
                "command": "/usr/bin/gcc",
                "args": [
                    "${file}",
                    "-g",
                    "-ansi",
                    "-pedantic-errors",
                    "-Wall",
                    "-Wextra",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}.out",
                    /*
                    "${fileDirname}/test/${fileBasenameNoExtension}_test.c",
                    "verify_funcs.c",
                    */
                    "scheduler_heap.c",
                    "task_heap.c",
                    "../../ds/heap.c",
                    "../../ds/heapify.c",
                    "../../ds/uid.c",
                    "../../ds/vector.c",
                    "../../ds/priority_q_heap.c",
                    "-I../../ds/include"                    
                ],
                "problemMatcher": [
                    "$gcc"
                ],
                "group": "build"
            }
        ],
        
        "version": "2.0.0"
    }