
    {
        "tasks": [
            {
                "type": "shell",
                "label": "gd11 FileName.out build active file",
                "command": "/usr/bin/g++",
                "args": [
                    "${file}",
                    "-g",
                    "-std=c++11",
                    "-pedantic-errors",
                    "-Wall",
                    "-Wextra",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}.out",
                    "string.cpp",
                    "-Iinclude"                    
                ],
                "problemMatcher": [
                    "$gcc"
                ],
                "group": "build"
            }
        ],
        
        "version": "2.0.0"
    }